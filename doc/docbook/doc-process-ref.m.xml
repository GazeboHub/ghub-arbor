<refentry xml:id="r.libreOfficeWriter" m:refType="spem:ToolDefinition">
  <refnamediv>
    <refname>LibreOffice Writer</refname>
    <refpurpose>Word Processor (desktop) (FOSS)</refpurpose>
    <reftype>Tool Definition</reftype>
    <m:attribute name="spem:managedWorkProduct" xref="r.documentation"/>
    <!-- can export to DocBook -->
  </refnamediv>
</refentry>

<refentry xml:id="r.documentation" m:refType="spem:WorkProductDefinition">
  <refnamediv>
    <refname>Documentation</refname>
    <refpurpose>An asset describing the nature and usage of a resource</refpurpose>
    <reftype>Work Product Definition</reftype>
  </refnamediv>
</refentry>

<refentry xml:id="r.writeTechDocs" m:refType="spem:TaskDefinition">
  <refnamediv>
    <refname>Write Technical Documentation</refname>
    <refpurpose>Documentation Task</refpurpose>
    <reftype>Task Definition</reftype>
    <m:attribute name="spem:usedTool" xref="r.libreOfficeWriter"/>
    <m:attribute name="spem:usedTool" xref="r.emacs"/>
    <m:attribute name="spem:usedTool" xref="r.uxwrite"/>
    <m:attribute name="spem:usedTool" xref="r.textastic"/>
    <m:attribute name="spem:requiredQualification" xref="r.techDocAuthor"/>
  </refnamediv>
</refentry>

</reference>